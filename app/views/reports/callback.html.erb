<!-- load a hidden iframe which allows access to internal org image -->
<script type="text/javascript">	
	var j$ = jQuery.noConflict();
	window.alert = function() {};
	j$(document).ready(function() {
	    j$(document.body).append('<iframe id="hiddenframe"></iframe>');
	    j$('iframe#hiddenframe').attr('src', '<%= "#{session[:accessurl]}/secur/frontdoor.jsp?sid=#{session[:accesstoken]}" %>&startUrl=/apex/notapage');
	    j$('iframe#hiddenframe').load(function(){
	        window.location.href = "/reports/success";
	    });
	});	
</script>
<style>
	body{
		width:100%;
		height:100%;
		background:#149ECD;
	}
	#hiddenframe{
		display:none;
	}
</style>